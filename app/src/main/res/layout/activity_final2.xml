<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sonic3"
    android:orientation="vertical"
    tools:context=".Final2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="Felicidades!!!"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textViewPunteo2"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_marginTop="30dp"
        android:background="#52F3F0F0"
        android:gravity="center|center_horizontal"
        android:text="PUNTEO"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnJugardeNuevo"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#412196F3"
            android:text="Jugar de Nuevo"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconTint="#E4E1E1" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#3603A9F4"
            android:text="Salir"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            app:icon="@android:drawable/ic_delete"
            app:iconTint="#EDE9E9" />
    </LinearLayout>
</LinearLayout>